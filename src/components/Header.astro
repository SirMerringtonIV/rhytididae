---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
---
<style>
ul.nobullet {
  list-style-type: none;
  margin: 0;
  padding: 0;
}
</style>

<header class="lg:flex justify-between p-5 gap-5 mx-auto container">
	<Astronav closeOnClick>
				<MenuItems class="hidden lg:flex">
				<ul class="nobullet flex flex-col lg:flex-row lg:gap-5">
					<li><a href="/index">Home</a></li>
					<li>
					<Dropdown class="group">
						<button class="flex items-center gap-1 whitespace-nowrap">
							<span>Guides</span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="3"
								stroke="currentColor"
								class="w-3 h-3 transition-transform group-open:rotate-180">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
							</svg>
						</button>							
						<DropdownItems class="relative">
						<div 
							class="lg:absolute bg-white top-2 w-40 border shadow rounded p-2">
							<ul>
								<li><a href="/partner">Minion Partners</a></li>
								<li><a href="/calculator">Calculators</a></li>
							</ul>
						</div>
						</DropdownItems>
					</Dropdown>
					</li>
					<li><a href="/blog">Blog</a></li>
					<li><a href="/about">About</a></li>
				</ul>
				</MenuItems>
	</Astronav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
