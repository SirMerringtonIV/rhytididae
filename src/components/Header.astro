---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
---
<style>
ul.nobullet {
  list-style-type: none;
  margin: 0;
  padding: 0;
}
</style>

<header class="lg:flex justify-between p-5 gap-5 mx-auto container">
	<Astronav closeOnClick>
		<MenuItems class="hidden lg:flex">
			<ul class="nobullet flex flex-col lg:flex-row lg:gap-5">
				<li><a href="/index">Home</a></li>
				<li>
					<Dropdown class="group">
						<button class="flex flex-row items-center gap-1">
							<span>Guides</span>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="3"
								stroke="currentColor"
								class="w-3 h-3 transition-transform group-open:rotate-180">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
							</svg>
						</button>							
						<DropdownItems class="relative">
							<div 
								class="lg:absolute bg-white top-2 w-40 border shadow rounded p-2">
								<ul>
									<li><a href="/partner">Minion Partners</a></li>
									<li><a href="/calculator">Calculators</a></li>
								</ul>
							</div>
						</DropdownItems>
					</Dropdown>
				</li>
				<li><a href="/blog">Blog</a></li>
				<li><a href="/about">About</a></li>
			</ul>
		</MenuItems>
	</Astronav>
</header>

